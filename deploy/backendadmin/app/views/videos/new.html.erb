<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-2xl">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Upload Video</h1>
      
      <%= form_with url: videos_path, local: true, html: { multipart: true } do |form| %>
        <div class="space-y-6">
          <div>
            <%= form.label :file, "Video File (MP4)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.file_field :file, 
                accept: "video/mp4",
                required: true,
                class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none" %>
            <p class="mt-1 text-sm text-gray-500">MP4 format, max 500MB</p>
          </div>
          
          <div>
            <%= form.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title, 
                placeholder: "Enter video title",
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
          
          <div>
            <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, 
                rows: 3,
                placeholder: "Optional description",
                class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
          </div>
          
          <div class="flex justify-between pt-4">
            <%= link_to "Cancel", videos_path, 
                class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-6 rounded-lg transition" %>
            <%= form.submit "Upload Video", 
                class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded-lg transition cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>